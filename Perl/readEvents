	{
		my $Name = $row->{Name};
		my $Email = $row->{Email};
		my $Telephone = $row->{Telephone};
		print "$Name,$Telephone,$Email\n";
		print OUT2 "$Name & $Email & $Telephone\\\\\n";
		print OUT2 "\\hline\n";
	}
	$sth11->finish();
	$sth12->finish();

}
